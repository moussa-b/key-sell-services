{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "shared/db/migrations/**/*.*"
      },
      {
        "include": "shared/db/seeds/**/*.*"
      },
      {
        "include": "shared/mail/templates/",
        "watchAssets": true
      },
      {
        "include": "shared/pdf/templates/",
        "watchAssets": true
      },
      {
        "include": "i18n/**/*",
        "watchAssets": true
      }
    ],
    "plugins": []
  },
  "generateOptions": {
    "spec": false
  }
}
